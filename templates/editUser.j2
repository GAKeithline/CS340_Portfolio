<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Slam Dunk- Edit Users</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' href="{{ url_for('static', filename='dunk.css')}}">
</head>

    <body>
    <header>
        <H1 align="center"><a href="/index">Slam Dunk</a></H1>
        <p align="center" class="global"> |
                <a href="/users">Users</a> |
                <a href="#">Rosters</a> |
                <a href="#">Players</a> |
                <a href="/teams">Teams</a> |
                <a href="#">Injury Status</a> |
                <a href="#">Players-Rosters</a> |
            </p>
        <section>
            <H2 align="center">Edit Users</H2>
        </section>
    </header>

    <main>
        <div id="edit" align="center">
                <form method="POST" id="editUser" action="/editUser/{{user_data[0].user_id}}">
                    <fieldset class="acres">
                        <input type="hidden" class="form-control" name="user_id" id="user_id" value="{{user_data[0].user_id}}" required>
                        <label>User ID: </label> {{user_data[0].user_id}}
                        <label>First and last name: </label> <input type="text" class="form-control" id="user_name" name="user_name" placeholder="{{user_data[0].user_name}}" value="{{user_data[0].user_name}}">
                        <label>Email Address: </label> <input type="text" name="user_email" class="form-control" id="user_email" name="user_email" placeholder="{{user_data[0].user_email}}" value="{{user_data[0].user_email}}">
                        <label>Password: </label> <input type="text" name="user_password" class="form-control" id="user_password" name="user_password" placeholder="{{user_data[0].user_password}}" value="{{user_data[0].user_password}}">
                        <input class="btn" type="submit" name = "editUser" id="editUser" value="Submit">
                    </fieldset>
                        <a href="/users">Cancel</a>
                </form>
                <p>&nbsp;</p>
        </div> <!-- edit -->
